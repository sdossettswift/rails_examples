<div class="page-header">
  <h1>Products <small>Artisanally Crafted</small></h1>
</div>


<% @products.in_groups_of(3, false) do |products| %>
  <div class="row">
    <% products.each do |product| %>
      <div class="col-xs-4">
        <div class="thumbnail">

          <%= link_to product_path(id: product.id) do %>
            <%= image_tag product.image, class: "small" %>
          <% end %>
          <div class="caption">
            <h3><%= product.name %></h3>
            <p><%= number_to_currency product.price %></p>
            <%= link_to 'Detail', product_path(id: product.id), class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
