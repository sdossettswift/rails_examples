<div class="page-header">

  <h1>Artists <small>Very Artistic</small></h1>


</div>



<div class="row">
  <div class="col-xs-8">
    <div class="list-group">
      <% @artists.each do |artist| %>
        <%= link_to artist.name, artist_path(id: artist.id), class: 'list-group-item'%>
      <% end %>
    </div>
  </div>
  <div class="col-xs-3 col-xs-offset-1">

    <p class="text-center">
      <strong>Most Popular Album:</strong><br>
      <%= link_to album_path(id: @most_popular_album.id), class: "" do %>
        <%= @most_popular_album.title %> by <%= @most_popular_album.artist.name %>
      <% end %>
    </p>

    <p class="text-right">
      <%= link_to 'New Artist', new_artist_path, class: "btn btn-primary btn-block" %>
    </p>
    <p class="text-right">
      <%= link_to 'New Album', new_album_path, class: "btn btn-primary btn-block" %>
    </p>
    <p class="text-right">
      <%= link_to 'All Albums', albums_path, class: "btn btn-primary btn-block" %>
    </p>
  </div>
</div>
