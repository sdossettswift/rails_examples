<div class="page-header">
  <h1>Contact List</h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>
        Photo
      </th>
      <th>
        First Name
      </th>
      <th>
        Last Name
      </th>
      <th>
        Email
      </th>
      <th>
        View
      </th>
      <th>
        Edit
      </th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td>
          <%= image_tag contact.photo, class: "img-circle tiny" %>
        </td>
        <td>
          <%= contact.first_name %>
        </td>
        <td>
          <%= contact.last_name %>
        </td>
        <td>
          <%= contact.email %>
        </td>
        <td>
          <%= link_to 'View', contact_path(id: contact.id) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_contact_path(id: contact.id) %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
